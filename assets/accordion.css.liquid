.accordion{padding: 2.5em 0; background-color: #ffffff;}
.accordion h2{font-size: 1.5em; font-weight: 600; margin-bottom: 0.5em; text-align: left;}
.accordion .grid{justify-content: flex-end;}
.accordion .question {cursor: pointer; position: relative; border-bottom: 2px solid #000; padding: 0.9em 1.2em 0.5em 0; text-align: left; font-weight: 600; font-size: 1.2em;}
.accordion .question i{width: 1em; height: 1em; font-size: 1em; position: absolute; display: block; padding: 1em; cursor: pointer; box-sizing: content-box; right: 0; top: 50%; -webkit-transform: translateY(-50%); transform: translateY(-50%)}
.accordion .question i:before {content: ''; position: absolute; left: 1em; right: 1em; top: 50%; border-top: 2px solid #000000; width: 1em;}
.accordion .question i:after {content: ''; position: absolute; left: 1em; right: 1em; top: 50%; border-top: 2px solid #000000; -webkit-transform: rotate(90deg); -ms-transform: rotate(90deg); transform: rotate(90deg); -webkit-transition: all 0.2s ease-out; -moz-transition: all 0.2s ease-out; -o-transition: all 0.2s ease-out; -ms-transition: all 0.2s ease-out; transition: all 0.2s ease-out; width: 1em;}
.accordion .question.active i:after {-webkit-transform: rotate(0deg); -ms-transform: rotate(0deg); transform: rotate(0deg); -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"; filter: alpha(opacity=0); -moz-opacity: 0; -khtml-opacity: 0; opacity: 0;}
.accordion .answer {display: none; padding: 1.3em 0 1em;}
.accordion .answer a{text-decoration: underline;}

@media all and (max-width: 900px){
	.accordion{padding: 1.5em 0;}
	.accordion h2{text-align: center;}
  .accordion .grid{justify-content: center;}
}