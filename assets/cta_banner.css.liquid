.cta-banner{background-color: var(--background-color); padding: 1.5em 0;}
.cta-banner .container{justify-content: center; align-items: center;}
.cta-banner h2{color: var(--text-color); margin-bottom: 0; font-size: 1.5em; font-weight: 600;}
.cta-banner .Button{border-color: var(--text-color); color: var(--text-color); margin-left: 2.5em; font-size: 1em; letter-spacing: 0.1em; padding: 0.7em 2.5em;}
.cta-banner .Button:hover{color: var(--text-color);}
@media all and (max-width: 900px){
  .cta-banner .container{flex-direction: column; text-align: center;}
  .cta-banner h2{margin-bottom: 1em; line-height: 1.2em;}
  .cta-banner .Button{margin-left: 0;}
}