.hero{position: relative; padding: var(--padding);}
.hero .bg-container{position: absolute;top: 0;left: 0;width: 100%;height: 100%;background-size: cover;background-position: center;background-repeat: no-repeat;}
.hero .container{position: relative;}
.hero .content{margin-top: var(--content-margin-top);text-align: var(--text-alignment); max-width: var(--content-max-width);}
.hero h2,
.hero p{color: var(--text-color); line-height: 1.35em;}
.hero h2{font-size: var(--title-font-size); font-weight: 800; margin-bottom: 0.3em;}
.hero p{font-size: var(--text-font-size);}
.hero a{font-size: 1.2em; letter-spacing: 0em; margin-top: 0.4em;}
.hero a:hover{color: #FFFFFF !important; border-color: #FFFFFF;}