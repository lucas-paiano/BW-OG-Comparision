.icons-and-text{background-color: var(--background-color); color: var(--text-color); padding: 1em 0 2em;}
.icons-and-text .icon-item{margin-bottom: 3em;}
.icons-and-text .icon-container{text-align: var(--icons-position);}
.icons-and-text img{max-width: 100%; margin: auto;}
.icons-and-text h2, 
.icons-and-text h4
.icons-and-text p{color: var(--text-color);}
.icons-and-text h2{text-align: center; text-transform: uppercase; font-size: 2em; font-weight: 600;}
.icons-and-text h4{margin-bottom: 0; font-weight: 600;}
.icons-and-text p{max-width: var(--text-max-width);}

@media all and (max-width: 900px){
  .icons-and-text{padding: 1.5em 0 0;}
}