.polaroid-cards{background-color: #efefef; padding-top: 1em;}
.polaroid-cards h2{text-align: center; font-size: 2em; font-weight: 800; margin-bottom: 0.5em;}
.polaroid-cards h3{font-weight: 400; text-align: center; font-size: 1.5em; margin-top: 0.5em;}
.polaroid-cards .item{margin-bottom: 1.5em;}
.polaroid-cards .item .content{width: 100%; padding: 1em; background-color: #FFFFFF; padding: 0.7em 0.7em 1em 0.7em;}
.polaroid-cards .image-container{background-size: cover; background-repeat: no-repeat; background-position: center; padding-top: 100%;}
.polaroid-cards .item p{margin-bottom: 0;}