.steps-with-images{padding-top: 1em;}
.steps-with-images .grid{margin-left: -40px;}
.steps-with-images .grid__item{padding-left: 40px;}
.steps-with-images .step{margin-bottom: 1em}
.steps-with-images h2{text-align: center; font-size: 2em; font-weight: 800;}
.steps-with-images h3,
.steps-with-images h4{margin-bottom: 0; line-height: 1.2em;}
.steps-with-images h3{font-size: 2em;}
.steps-with-images h4{font-size: 1.5em;}
.steps-with-images .image-container{background-size: cover; background-repeat: no-repeat; background-position: center; margin-top: 0.5em;}

@media all and (max-width: 600px){
  .steps-with-images{padding-top: 1.5em;}
  .steps-with-images .step:not(:last-child){margin-bottom: 2em;}
}