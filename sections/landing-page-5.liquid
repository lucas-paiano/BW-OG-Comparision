{%- assign has_section_separator = false -%}

{%- for block in section.blocks -%}
  {%- if block.type == 'separator' -%}
    {%- assign has_section_separator = true -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

{%- capture faq_content -%}
  <div class="Faq-Landing-Page">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'separator' -%}
          <h1 class="Faq__Section HeadingCustom u-h1" {{ block.shopify_attributes }}>
            <span class="Anchor" id="block-{{ block.id }}"></span>
            {{- block.settings.title | escape -}}
          </h1>

        {%- when 'question' -%}
          <div class="Faq__Item {% if section.blocks[forloop.index].type == 'separator' or forloop.last %}Faq__Item--lastOfSection{% endif %}" aria-expanded="false" {{ block.shopify_attributes }}>

            <div class="Faq__ItemWrapper">
              <button class="Faq__Question_Custom">{{ block.settings.title | escape }}</button>

              <div class="Faq__AnswerWrapper_Custom">
                <div class="Faq__Answer_Custom Rte">
                  {{ block.settings.answer }}
                </div>
              </div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
    
    <div class="image-holder">
		<img class="small_review" src="https://cdn.shopify.com/s/files/1/0017/0118/3547/files/Section5.png?v=1602083244" />
	</div>
    
    <div class="Section5Price">$29</div>
          
          <div class="AddToCartSection5">
                <form method="post" action="/cart/add">
  					<input type="hidden" name="id" value="30231671046203" />
                  <input min="1" type="hidden" id="quantity" name="quantity" value="1"/>
                  <button class="ProductForm__AddToCart Button Button--primary Button--full" type="submit" data-action="add-to-cart">
                    <span>ADD TO CART</span>
                  </button>
				</form>
              </div>
          
          	<div class="SubButton1">90-DAY SUPPLY. $0.32 PER DAY.</div>

          </div>
    
  </div>
{%- endcapture -%}

<section data-section-type="faq" data-section-id="{{ section.id }}">
  <div class="Container">
    <div class="PageContent {% unless has_section_separator %}PageContent--narrow{% endunless %}">
      {%- if has_section_separator -%}
        <div class="PageLayout">

          <div class="PageLayout__Section">
            {{- faq_content -}}
          </div>
        </div>
      {%- else -%}
        {{- faq_content -}}
      {%- endif -%}
    </div>
  </div>
</section>

